{
    "name": "bartaakos/brta-yii-skeleton",
    "description": "Basic Yii skeleton",
    "keywords": ["yii skeleton"],
    "homepage": "https://github.com/bartaakos",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Akos Barta",
            "email": "brta.akos@gmail.com",
            "homepage": "https://github.com/bartaakos"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.phundament.com"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "yiisoft/yii": "1.1.*",
        "yiiext/migrate-command": "@dev",
        "yiiext/status-behavior": "dev-master",
        "yiiext/imperavi-redactor-widget": "dev-master",
        "assisrafael/giix": "dev-master",
        "crisu83/yii-auth": "dev-master",
        "crisu83/yii-seo": "dev-master",
        "crisu83/yii-debug": "dev-master"
    },
    "require-dev":{
        "malyshev/yii-debug-toolbar": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "config": "./"
        }
    },
    "scripts": {
        "pre-install-cmd": "config\\ComposerCallback::preInstall",
        "post-install-cmd": "config\\ComposerCallback::postInstall",
        "pre-update-cmd": "config\\ComposerCallback::preUpdate",
        "post-update-cmd": "config\\ComposerCallback::postUpdate",

        "post-package-install": [
            "config\\ComposerCallback::postPackageInstall"
        ],
        "post-package-update": [
            "config\\ComposerCallback::postPackageUpdate"
        ]
    }
}